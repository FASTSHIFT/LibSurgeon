[flake8]
max-line-length = 88
extend-ignore = E203, E501, W503

# Exclude Ghidra Jython scripts - they use Ghidra's runtime globals
# (currentProgram, getScriptArgs, etc.) which are injected at runtime
exclude =
    ghidra_decompile_lib.py,
    ghidra_decompile_elf.py,
    ghidra_common.py,
    __pycache__,
    .git,
    *.pyc
